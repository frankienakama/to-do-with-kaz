@{
  Layout="Shared/_Layout.cshtml";
}

<h1>All the Places You've Been</h1>
<ul>
  @foreach(var place in Model)
  {
    <li>@place.GetDescription()</li>
  }
</ul>

<p><a href="/">Add another place!</a></p>

<form action="/places_cleared" method="post">
  <button type="submit" name="button">Clear All</button>
</form>
